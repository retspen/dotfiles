{
  "edit_predictions": {
    "provider": "copilot",
  },
  "git_panel": {
    "sort_by_path": false,
    "tree_view": false,
  },
  "icon_theme": "Catppuccin Latte",
  "agent": {
    "favorite_models": [
      {
        "provider": "copilot_chat",
        "model": "gpt-5.2-codex",
      },
      {
        "provider": "copilot_chat",
        "model": "gemini-3-pro-preview",
      },
      {
        "provider": "copilot_chat",
        "model": "claude-opus-4.5",
      },
    ],
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-opus-4.5",
    },
    "model_parameters": [],
  },
  "soft_wrap": "editor_width",
  "preferred_line_length": 120,
  "show_edit_predictions": true,
  "collaboration_panel": {
    "button": false,
  },
  "auto_signature_help": true,
  "vim_mode": false,
  "ui_font_size": 15,
  "buffer_font_size": 14,
  "project_panel": {
    "indent_size": 16,
  },
  "terminal": {
    "dock": "bottom",
    "detect_venv": { "on": { "activate_script": "default" } },
    "env": { "EDITOR": "zed --wait" },
  },
  "scrollbar": {
    "show": "never",
  },
  "gutter": {
    "min_line_number_digits": 0,
    "folds": false,
    "runnables": false,
  },
  "inlay_hints": {
    "enabled": true,
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
  },
  "theme": "Catppuccin Macchiato - No Italics",
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_close_button": "hover",
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.venv",
    "**/.idea",
    "**/.vscode",
    "**/.mysql",
    "**/.DS_Store",
    "**/.devcontainer",
    "**/node_modules",
    "**/__pycache__",
  ],
  "languages": {
    "JavaScript": {
      "tab_size": 2,
    },
    "Python": {
      "tab_size": 4,
      "format_on_save": "on",
      "language_servers": ["pyright", "ruff"],
      "formatter": [
        {
          "code_action": "source.organizeImports.ruff",
        },
        {
          "code_action": "source.fixAll.ruff",
        },
        {
          "language_server": {
            "name": "ruff",
          },
        },
      ],
    },
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 120,
          "lint": {
            "extendSelect": ["I"],
          },
        },
      },
    },
  },
}
